{% extends 'admin/base.html.twig' %}

{% block title %}Les Statistiques{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des Statistiques</h1>
          <a href="{{path('admin_stats_create')}}"><div class="btn index" style="background-color:#2c3e50; color:white; margin: 1rem 1rem;">Ajouter des statistiques </div></a>
         <input class="form-control" id="myInput" type="text" placeholder="Rechercher..">
        <br>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Pilote</th>
                    <th>Team</th>
                    <th>Grand-Prix</th>
                    <th>Ann√©e</th>
                    <th>Chrono</th>
                    <th>Km/h</th>

                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody id="myTable">
            
                {% for stats in pagination.data %}
                    <tr>
                        <td>{{stats.id}}</td>
                         
                        <td>{{stats.pilote.prenom}} {{stats.pilote.nom}}</td>
                        
                        <td>{{stats.team.nom}}</td>
                        
                        <td>{{stats.grandprix.title}}</td>
                         
                        <td>{{stats.grandprix.date}}</td>
                        <td>{{stats.chrono}}</td>
                        <td>{{stats.kmh}}</td>
                        
                       
                        <td class="text-center">
                            <a href="{{ path('admin_stats_edit', {'id':stats.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_stats_delete', {'id':stats.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
       
    </div>
{% endblock %}
